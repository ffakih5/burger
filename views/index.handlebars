<section class="container">
    <img class="burger-image" src="/assets/image/hamburger.png" alt="burger">
    <h1>Eat-Da-Burger</h1>
    <div class="row">
        <div class="col-sm-5">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="d-flex justify-content-between align-items-center burger-item">
                    <div class="burger-id d-flex justify-content-center align-items-center">{{id}}</div>
                    <div class="burger-name">{{burger_name}}</div>
                    <button class="devour-button-devour" data-id="{{id}}">To be Devoured!</button>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <div class="d-flex justify-content-between align-items-center burger-item">
                    <div class="burger-id d-flex justify-content-between align-items-center">{{id}}</div>
                    <div class="burger-name">{{burger_name}}</div>
                    <button class="devour-button-devoured">Devoured!</button>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <p class="form-add">Add to devour your burger of choice!
        <p>
        <form id="start-form" class="d-flex flex-column align-items-center">
            <input id="burger-select" class="form-input" type="text">
            <input class="submit-button" type="submit" value="Submit">
        </form>
    </div>
    </main>