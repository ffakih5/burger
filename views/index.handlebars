<header>
    <img class="burger-image" src="assets/img/hamburger.png" alt="burger">
    <h1>Eat-Da-Burger</h1>
</header>
<main>
    <div class="row">
        <div class="col=sm-6">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div class="burgers-list mt-5 d-flex flex-column flex-sm-row justify-content-between">
                    <div class="burger-id mt-5 d-flex flex-column flex-sm-row justify-content-between">{{id}}</div>
                    <div class="burger-name">{{burger_name}}</div>
                    <button class="devour-button-devour" data-id="{{id}}">To be Devoured!</button>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col=sm-6">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <div class="burgers-list mt-5 d-flex flex-column flex-sm-row justify-content-between">
                    <div class="burger-id mt-5 d-flex flex-column flex-sm-row justify-content-between">{{id}}</div>
                    <div class="burger-name">{{burger_name}}</div>
                    <button class="devour-button-devoured" data-id="{{id}}">Devoured!</button>
                </div>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center align-items-center">
        <p class="form-add">Add to devour your burger of choice!
        <p>
            <input id="burger-select" class="form-input" type="text">
            <input class="submit-button" type="submit" value="Submit">
            </form>
    </div>
</main>